<%layout('./layouts/boilerplate')%>
<body>
 <div class="row mt-3">
    <h2 class="col-6 offset-1 mb-4">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST"  class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" placeholder="enter the username" class="form-control" id="username" required>
            <div class="invalid-feedback">
                Enter valid username
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" placeholder="enter password" class="form-control" id="password" required>
            <div class="invalid-feedback">
                Enter valid password
            </div>
        </div>
        <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>
</body>